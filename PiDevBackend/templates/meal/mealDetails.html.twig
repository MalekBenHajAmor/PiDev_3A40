{% block body %}

  <div data-aos="fade" class="page-title">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
          <li><a href="{{ path('app_meal') }}">Meals</a></li>
            <li class="current">Portfolio Details</li>
          </ol>
        </div>
      </nav>
    </div>
    <!-- Portfolio-details Section - Portfolio Details Page -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container" data-aos="fade-up">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-6" data-aos="fade-up">
                    <div class="portfolio-details-slider swiper">
                        <!-- Votre contenu ici -->
                        <div class="swiper-slide">
                            <img src="{{ asset(meal.image) }}" alt="{{ meal.nomRepas }}">
                        </div>
                    </div>
                </div>

                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="portfolio-description">
                       
                        <!-- Autres détails du repas -->
                        <div class="portfolio-info">
                        
                          <div> <h2>{{ meal.nomRepas }}</h2>
                            <h3>Meal informations</h3>
                            <ul>
                                <li><strong>Category</strong> {{ meal.typeRepas }}</li>
                               <li><strong>nombre de personne</strong>{{ meal.nombrePersonnes }} </li>
                               <li><strong>Durée de preparation </strong>  {{ meal.dureePreparation}}</li>
                                <li><strong>prix </strong> {{ meal.prix}}</li>
                                <li><a href="#" class="btn-visit align-self-start">Commander les ingrediants</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
                        <h3>Ingrédients :</h3>
                        <ul>
                            {% set ingredientsArray = meal.ingrediants|split(',') %}
                            {% for ingredient in ingredientsArray %}
                                <li>{{ ingredient }}</li>
                            {% endfor %}
                        </ul>
                         <h3>Recette:</h3>
                        <ol>
                            {% set ingredientsArray = meal.recette|split('.') %}
                            {% for ingredient in ingredientsArray %}
                                <li>{{ ingredient }}</li>
                            {% endfor %}
                        </ol></div>
                       
                        
        </div>
    </section><!-- End Portfolio-details Section -->
</main>
{% endblock %}
