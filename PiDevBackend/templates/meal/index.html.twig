{% block title %}Liste des Repas{% endblock %}

{% block body %}
 {# Portfolio Section - Home Page #}
    <section id="portfolio" class="portfolio">

      {#  Section Title #}
      <div class="container section-title" data-aos="fade-up">
        <h2>Meals</h2>
       
      </div>{# End Section Title #}

      <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

         <<ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
    <li data-filter="*" class="filter-active">All</li>
    {% for typeRepas in typesRepas %}
        <li data-filter=".filter-{{ typeRepas|lower }}">{{ typeRepas }}</li>
    {% endfor %}
</ul>{# End Portfolio Filters #}

   <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
  {% for meal in meals %}
    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-{{ meal.typeRepas|lower }}">
      <div class="card mb-4">
        <div class="image-container"> {# Ajout du conteneur d'image #}
          <img src="{{ asset(meal.image) }}" class="img-fluid" alt="{{ meal.nomRepas }}">
        </div>
        <div class="portfolio-info">
          <h5>{{ meal.nomRepas }}</h5>
          <p>{{ meal.ingrediants|slice(0, 20) }}...</p>
          <div class="links">
            <a href="{{ asset(meal.image) }}" data-gallery="portfolio-gallery-product" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
            <a href="{{ path('meal_details', {'id': meal.id}) }}" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
</div>{# End Portfolio Container #}

        </div>

      </div>

    </section>{# End Portfolio Section #}
        
        
           
{% endblock %}
