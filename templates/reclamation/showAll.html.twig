  
{% block body %}
 {% block css %}
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
   {% endblock %}
    
{% block reclamations %}
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Sujet</th>
      <th>Date de soumission</th>
      <th>Suivi</th>
      <th>Rapport</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {% for rec in reclamation %}
    <tr>
      <td>{{ rec.sujet }}</td>
      <td>{{ rec.date ? rec.date|date('Y-m-d') : '' }}</td>
      <td>{{ rec.etat }}</td>
      <td><a href="#"><i class="fas fa-file-alt"></i></a></td>
      <td>
       <a href="{{ path('app_reclamation_delete', {'id': rec.id})}}"><i class="fas fa-trash-alt"></i></a>
       <a href="{{ path('app_reclamation_edit', {'id': rec.id}) }}"><i class="fas fa-edit"></i></a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
{% endblock %}
